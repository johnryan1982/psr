{
  "name": "node-project-scaffold",
  "version": "0.1.0",
  "description": "A Node.js project scaffold",
  "author": "John Ryan <johnryan1982@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/johnryan1982/node-project-scaffold.git"
  },
  "homepage": "https://bitbucket.org/johnryan1982/node-project-scaffold#README",
  "devDependencies": {
    "jscs": "^2.11.0",
    "jshint": "^2.9.1",
    "watch": "^0.17.1"
  },
  "config": {
    "srcdir": "src",
    "testdir": "test"
  },
  "scripts": {
    "prelint": "printf '=> lint: '",
    "prestyle:js": "printf '=> check style: '",
    "complete": "printf '\n\\033[0;32mâœ“\\033[0m complete @ %s\n\n' \"$(date)\"",
    "complete:subtask": "printf '.\n'",
    "lint": "./node_modules/jshint/bin/jshint $npm_package_config_srcdir $npm_package_config_testdir",
    "style:js": "./node_modules/jscs/bin/jscs $npm_package_config_srcdir $npm_package_config_testdir",
    "test": "npm run lint -s && npm run style:js -s",
    "watch": "watch 'npm run test -s' $npm_package_config_srcdir $npm_package_config_testdir",
    "postlint": "npm run complete:subtask -s",
    "poststyle:js": "npm run complete:subtask -s",
    "posttest": "npm run complete -s"
  }
}
