{
  "name": "node-project-scaffold",
  "version": "0.1.0",
  "description": "A Node.js project scaffold",
  "author": "John Ryan <johnryan1982@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/johnryan1982/node-project-scaffold.git"
  },
  "homepage": "https://bitbucket.org/johnryan1982/node-project-scaffold#README",
  "devDependencies": {
    "browserify": "^13.0.0",
    "istanbul": "^0.4.2",
    "jscs": "^2.11.0",
    "jshint": "^2.9.1",
    "karma": "^0.13.22",
    "karma-commonjs": "0.0.13",
    "karma-coverage": "^0.5.5",
    "karma-mocha": "^0.2.2",
    "less": "^2.6.1",
    "less-plugin-clean-css": "^1.5.1",
    "mocha": "^2.4.5",
    "uglify-js": "^2.6.2",
    "watch": "^0.17.1"
  },
  "config": {
    "distdir": "dist",
    "srcdir": "src",
    "srcdir_styles": "src/styles",
    "srcdir_html": "src/html",
    "srcdir_js": "src/js",
    "testdir": "test"
  },
  "scripts": {
    "build": "npm run build:js -s && npm run build:css -s",

    "complete": "printf '\n\\033[0;32mâœ“\\033[0m complete @ %s\n\n' \"$(date)\"",
    "complete:subtask": "printf '.\n'",

    "coverage:js": "istanbul cover _mocha -- -R spec",

    "prebuild:css": "printf '=> compiling css: '",
    "build:css": "lessc --clean-css $npm_package_config_srcdir_styles/main.less $npm_package_config_distdir/main.min.css",
    "postbuild:css": "npm run complete:subtask -s",

    "prebuild:js": "printf '=> compiling js: '",
    "build:js": "browserify $npm_package_config_srcdir_js/main.js | uglifyjs -o $npm_package_config_distdir/main.min.js",
    "postbuild:js": "npm run complete:subtask -s",

    "prelint:js": "printf '=> linting js: '",
    "lint:js": "jshint $npm_package_config_srcdir_js $npm_package_config_testdir",
    "postlint:js": "npm run complete:subtask -s",

    "prestyle:js": "printf '=> validating js style: '",
    "style:js": "jscs $npm_package_config_srcdir_js $npm_package_config_testdir",
    "poststyle:js": "npm run complete:subtask -s",

    "test": "npm run lint:js -s && npm run style:js -s && npm run coverage:js -s",
    "posttest": "npm run complete -s",

    "watch": "watch 'npm run test -s' $npm_package_config_srcdir $npm_package_config_testdir"
  }
}
